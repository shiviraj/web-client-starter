{
  "compilerOptions": {
    "target": "es5",
    "rootDir": "src",
    "moduleResolution": "node",
    "outDir": "lib",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "module": "CommonJS",
    "lib": [
      "es5"
    ]
  },
  "exclude": [
    "node_modules",
    "lib/**/*",
    "**/*.spec.ts"
  ],
  "include": [
    "src/**/*",
    "*.js",
    "*.json"
  ]
}
